<Window x:Class="tutorat.View.StudentDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="StudentDashboard" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock Text="Bienvenue dans votre espace étudiant"
                       FontSize="18"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0 0 0 20"/>

            <Button Content="Demander de l'aide"
                    Width="250" Height="40" Margin="0 10"
                    Command="{Binding OpenHelpRequestCommand}" />

           

            <Button Content="Choisir mes disponibilités"
                    Width="250" Height="40" Margin="0 10"
                    Command="{Binding OpenAvailabilityCommand}" />
        </StackPanel>
    </Grid>
</Window>
