<Window x:Class="tutorat.View.StudentDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        Title="Tableau de bord étudiant" 
        Background="AliceBlue"
        WindowStartupLocation="CenterScreen">

    <DockPanel>

        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Background="WhiteSmoke"
                    Height="50"
                    VerticalAlignment="Top">
            <Button Content="Demander de l'aide"
                    Click="OnOpenHelpRequest"
                    Margin="10,5"
                    Padding="15,5"
                    Background="LightSteelBlue"
                    FontWeight="Bold"
                    Cursor="Hand"/>
            <Button Content="Choisir mes disponibilités"
                    Click="OnOpenAvailability"
                    Margin="10,5"
                    Padding="15,5"
                    Background="LightSteelBlue"
                    FontWeight="Bold"
                    Cursor="Hand"/>
        </StackPanel>

        <Grid Background="White" Margin="10" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Bienvenue dans votre espace étudiant"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="DarkSlateGray"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,20"
                       Grid.Row="0"/>

            <Frame x:Name="MainFrame"
                   Grid.Row="1"
                   Margin="10"
                   NavigationUIVisibility="Hidden"
                   Background="White"/>
        </Grid>
    </DockPanel>
</Window>
