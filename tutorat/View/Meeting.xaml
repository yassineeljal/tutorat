<Window x:Class="tutorat.View.Meeting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tutorat.View"
        mc:Ignorable="d"
        Title="Meeting" Height="450" Width="800"
        Background="#F0F8FF" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

  

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Id :" VerticalAlignment="Center" Margin="5,0,5,0"
                       Foreground="#007ACC" FontWeight="SemiBold"/>
            <TextBox Width="30"
                     Text="{Binding IdInput, UpdateSourceTrigger=PropertyChanged}"
                     Background="#E6F2FF" BorderBrush="#007ACC"
                     Height="20"/>
            <Button Content="Rechercher"
                    Height="25"
                    Width="75"
                    Margin="10,0,0,0"
                    Background="#ADD8E6"
                    BorderBrush="Transparent"
                    Foreground="Black"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Command="{Binding DeleteMeetingCommand}"/>

            <Button Content="Retour Dashboard"
              Height="25"
              Width="120"
              Background="#ADD8E6"
              BorderBrush="Transparent"
              FontWeight="Bold"
              Cursor="Hand"
              VerticalAlignment="Top"
              HorizontalAlignment="Center"
              Margin="10,0,0,0"
              Click="ReturnDashboard_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Meetings}"
                  SelectedItem="{Binding SelectedMeeting}"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  GridLinesVisibility="Horizontal"
                  RowBackground="#FFFFFF"
                  AlternatingRowBackground="#E6F2FF"
                  BorderBrush="#007ACC"
                  HeadersVisibility="Column"
                  VerticalGridLinesBrush="#CCE5FF"
                  HorizontalGridLinesBrush="#CCE5FF">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Date de la rencontre" Binding="{Binding DateMeeting}" Width="Auto"/>
                <DataGridTextColumn Header="Tuteur" Binding="{Binding Tutor.Da}" Width="Auto"/>
                <DataGridTextColumn Header="Étudiant" Binding="{Binding Student.Da}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
