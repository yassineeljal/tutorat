<Window x:Class="tutorat.View.CreateMeeting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tutorat.View"
        mc:Ignorable="d"
        Title="CreateMeeting" Height="450" Width="700">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Nom du meeting :" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1"
             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
             Width="250"
             Height="30"
                 HorizontalAlignment="Left"/>
        <Label Content="Description :" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="0,4,0,0"/>
        <TextBox Grid.Row="1" Grid.Column="1"
             Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
             Height="30"
             AcceptsReturn="True"
             TextWrapping="Wrap"
             VerticalScrollBarVisibility="Auto"/>
        <Label Content="Date :" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,0"/>
        <DatePicker Grid.Row="2" Grid.Column="1"
                SelectedDate="{Binding Date, UpdateSourceTrigger=PropertyChanged}"
                Width="100"
                HorizontalAlignment="Left"
                Height="30"/>

        <Label Content="Heure (Heure:Minute) :" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,0"/>
        <TextBox Grid.Row="3" Grid.Column="1"
             Text="{Binding Time, UpdateSourceTrigger=PropertyChanged}"
             Width="80"
             HorizontalAlignment="Left"
             Height="30"/>

        <Label Content="Da du tuteur :" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,0"/>
        <TextBox Grid.Row="4" Grid.Column="1"
             Text="{Binding TutorDa, UpdateSourceTrigger=PropertyChanged}"
             Width="80"
             HorizontalAlignment="Left"
             Height="30"/>

        <Label Content="Da de l'étudiant :" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,6,0,0"/>
        <TextBox Grid.Row="5" Grid.Column="1"
             Text="{Binding StudentDa, UpdateSourceTrigger=PropertyChanged}"
             Width="80"
             HorizontalAlignment="Left"
             Height="30"/>

        <Button Grid.Row="6" Grid.Column="1"
            Content="Créer meeting"
            Command="{Binding CreateMeetingCommand}"
            HorizontalAlignment="Right"
            Margin="0,10,0,0"/>
    </Grid>
</Window>
