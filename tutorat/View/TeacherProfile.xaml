<Window x:Class="tutorat.View.TeacherProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tutorat.View"
        mc:Ignorable="d"
        Title="TeacherProfile" Height="450" Width="800">
    <Grid>
        <Border Padding="20" Background="WhiteSmoke" CornerRadius="8" >
            <StackPanel HorizontalAlignment="Center" >

                <!-- Avatar (optionnel) -->
                <Ellipse Width="100" Height="100" Margin="0,0,0,20">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="pack://application:,,,/YourAssemblyName;component/Images/avatar-placeholder.png"
                                Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>

                <!-- Titre de bienvenue -->
                <TextBlock Text="Bienvenue," 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       HorizontalAlignment="Center" />

                <!-- Nom d'utilisateur -->
                <TextBlock Text="{Binding Username}" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,5,0,15" 
                       HorizontalAlignment="Center" />

                <!-- Email -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="✉️" FontSize="16" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding Email}" 
                           FontSize="16" 
                           Margin="5,0,0,0" 
                           VerticalAlignment="Center" />
                </StackPanel>

                <!-- Autres infos de profil -->
                <!--
            <StackPanel Margin="0,10,0,0">
                <TextBlock Text="Date d'inscription : " FontWeight="SemiBold"/>
                <TextBlock Text="{Binding RegistrationDate, StringFormat='{}{0:dd/MM/yyyy}'}"/>
            </StackPanel>
            -->

                <!-- Bouton Déconnexion (si implémenté dans le VM) -->
                <Button Content="Déconnexion"
                    Command="{Binding LogoutCommand}"
                    Width="120"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
