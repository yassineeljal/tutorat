<Window x:Class="tutorat.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tutorat.View"
        mc:Ignorable="d"
        Title="Connexion"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">


    <Grid Background="WhiteSmoke">
        <Border VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="300"
                Padding="20"
                Background="White"
                BorderBrush="LightGray"
                BorderThickness="1">

            <StackPanel>

                <TextBlock Text="Connexion"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="DarkSlateGray"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20" />

                <TextBlock Text="Rôle" FontSize="11" />
                <ComboBox ItemsSource="{Binding Roles}"
                          SelectedItem="{Binding SelectedRole}"
                          Margin="0,5"
                          Padding="5"/>

                <TextBlock Text="DA (identifiant)" FontSize="11" />
                <TextBox Text="{Binding Da, Mode=TwoWay}"
                         ToolTip="Entrez votre DA"
                         Margin="0,5"
                         Padding="5"/>

                <TextBlock Text="Mot de passe" FontSize="11" />
                <PasswordBox x:Name="PasswordBox"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             Margin="0,5"
                             Padding="5"/>

                <Button Content="Se connecter"
                        Command="{Binding LoginCommand}"
                        Margin="0,15,0,5"
                        Padding="8"
                        Background="LightSteelBlue"
                        FontWeight="SemiBold"
                        Cursor="Hand"/>

                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="Red"
                           FontSize="12"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
