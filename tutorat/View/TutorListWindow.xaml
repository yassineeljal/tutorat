<Window x:Class="tutorat.View.TutorListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Liste des tuteurs" Height="450" Width="800"
        Background="#F0F8FF">

    <Grid Margin="10" Background="#F0F8FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

       

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="DA :" VerticalAlignment="Center" Margin="10,0,5,0"
                       Foreground="#007ACC" FontWeight="SemiBold"/>
            <TextBox Width="100"
                     Height="20"
                     Background="#E6F2FF"
                     BorderBrush="#007ACC"
                     Text="{Binding DaInput, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Rechercher"
                    Background="#ADD8E6"
                    BorderBrush="Transparent"
                    Foreground="Black"
                    Height="20"
                    FontWeight="Bold"
                    Margin="10,0,10,0"
                    Cursor="Hand"
                    Command="{Binding SearchTutorCommand}" />

            <Button Content="Retour Dashboard"
         Height="25"
         Width="120"
         Background="#ADD8E6" 
         BorderBrush="Transparent"
         FontWeight="Bold"
         Cursor="Hand"
         VerticalAlignment="Top"
         HorizontalAlignment="Center"
         Margin="0,10,0,10"
         Click="ReturnDashboard_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Tutors}"
                  SelectedItem="{Binding SelectedTutor}"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  RowBackground="#FFFFFF"
                  AlternatingRowBackground="#E6F2FF"
                  GridLinesVisibility="Horizontal"
                  VerticalGridLinesBrush="#CCE5FF"
                  HorizontalGridLinesBrush="#CCE5FF"
                  BorderBrush="#007ACC">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Catégorie" Binding="{Binding Category}" Width="*"/>
                <DataGridTextColumn Header="Est lier" Binding="{Binding Islinked}" Width="*"/>
                <DataGridTextColumn Header="DA" Binding="{Binding Da}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding TutorsSearch}"
                  SelectedItem="{Binding SelectedTutorSearch}"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  Margin="0,10,0,0"
                  RowBackground="#FFFFFF"
                  AlternatingRowBackground="#E6F2FF"
                  GridLinesVisibility="Horizontal"
                  VerticalGridLinesBrush="#CCE5FF"
                  HorizontalGridLinesBrush="#CCE5FF"
                  BorderBrush="#007ACC">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Catégorie" Binding="{Binding Category}" Width="*"/>
                <DataGridTextColumn Header="Est lier" Binding="{Binding Islinked}" Width="*"/>
                <DataGridTextColumn Header="DA" Binding="{Binding Da}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,10,0,0" HorizontalAlignment="Center">
            <Button Content="Supprimer"
                    Height="30"
                    Width="100"
                    Background="#FF4C4C"
                    Foreground="White"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Margin="5,0,0,0"
                    Command="{Binding DeleteTutorCommand}" />
        </StackPanel>
    </Grid>
</Window>
