<UserControl x:Class="tutorat.View.TeacherUserControls.TutorList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tutorat.View.TeacherUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="10" Background="#F0F8FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Button Content="Retour Dashboard"
                Height="30"
                Width="150"
                Background="#ADD8E6" 
                BorderBrush="Transparent"
                FontWeight="Bold"
                Cursor="Hand"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="0,10,0,10"
                Click="ReturnDashboard_Click"/>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="DA :" VerticalAlignment="Center" Margin="0,0,5,0"
                       Foreground="#007ACC" FontWeight="SemiBold"/>
            <TextBox Width="100"
                     Background="#E6F2FF"
                     BorderBrush="#007ACC"
                     Text="{Binding DaInput, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Rechercher"
                    Background="#ADD8E6"
                    BorderBrush="Transparent"
                    Foreground="Black"
                    FontWeight="Bold"
                    Margin="10,0,0,0"
                    Cursor="Hand"
                    Command="{Binding SearchTutorCommand}" />
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Tutors}"
                  SelectedItem="{Binding SelectedTutor}"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  RowBackground="#FFFFFF"
                  AlternatingRowBackground="#E6F2FF"
                  GridLinesVisibility="Horizontal"
                  VerticalGridLinesBrush="#CCE5FF"
                  HorizontalGridLinesBrush="#CCE5FF"
                  BorderBrush="#007ACC">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="DA" Binding="{Binding Da}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding TutorsSearch}"
                  SelectedItem="{Binding SelectedTutorSearch}"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  Margin="0,10,0,0"
                  RowBackground="#FFFFFF"
                  AlternatingRowBackground="#E6F2FF"
                  GridLinesVisibility="Horizontal"
                  VerticalGridLinesBrush="#CCE5FF"
                  HorizontalGridLinesBrush="#CCE5FF"
                  BorderBrush="#007ACC">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="DA" Binding="{Binding Da}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,10,0,0" HorizontalAlignment="Center">
            <TextBlock Text="Entrez le Da de l'étudiant pour le mettre tuteur :" 
                       VerticalAlignment="Center" 
                       Margin="0,0,5,0"
                       Foreground="#007ACC" FontWeight="SemiBold"/>
            <TextBox Width="100"
                     Height="25"
                     Background="#E6F2FF"
                     BorderBrush="#007ACC"
                     Margin="5,0,5,0"
                     Text="{Binding DaInputCreateTutor, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Créer un tuteur"
                    Height="30"
                    Width="100"
                    Background="#ADD8E6"
                    BorderBrush="Transparent"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Margin="5"
                    Command="{Binding CreateTutorCommand}" />
            <Button Content="Info"
                    Height="30"
                    Width="100"
                    Background="#ADD8E6"
                    BorderBrush="Transparent"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Margin="5,0,0,0"
                    Command="{Binding InfoTutorCommand}" />
            <Button Content="Supprimer"
                    Height="30"
                    Width="100"
                    Background="#FF4C4C"
                    Foreground="White"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Margin="5,0,0,0"
                    Command="{Binding DeleteTutorCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
