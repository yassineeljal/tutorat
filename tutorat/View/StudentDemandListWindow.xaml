<Window x:Class="tutorat.View.StudentDemandListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:tutorat.ViewModel"
        mc:Ignorable="d"
        Title="Liste des demandes d'étudiants" Height="450" Width="800"
        Background="#F0F8FF">

    <Grid Margin="10" Background="#F0F8FF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Zone de recherche -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="DA :" VerticalAlignment="Center" Margin="10,0,5,0"
                       Foreground="#007ACC" FontWeight="SemiBold"/>
            <TextBox Width="100" Height="25" Background="#E6F2FF" BorderBrush="#007ACC"
                     Text="{Binding DaInput, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Rechercher" Command="{Binding SearchStudentCommand}"
                    Background="#ADD8E6" BorderBrush="Transparent" Foreground="Black"
                    Height="25" FontWeight="Bold" Margin="10,0,10,0" Cursor="Hand"/>
            <Button Content="Retour Dashboard" Click="ReturnDashboard_Click"
                    Height="25" Width="120" Background="#ADD8E6" BorderBrush="Transparent"
                    FontWeight="Bold" Cursor="Hand" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Liste complète des étudiants -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Students}"
                  SelectedItem="{Binding SelectedStudent}"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  RowBackground="#FFFFFF"
                  AlternatingRowBackground="#E6F2FF"
                  GridLinesVisibility="Horizontal"
                  VerticalGridLinesBrush="#CCE5FF"
                  HorizontalGridLinesBrush="#CCE5FF"
                  BorderBrush="#007ACC">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="DA" Binding="{Binding Da}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Résultat de recherche -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding StudentsSearch}"
                  SelectedItem="{Binding SelectedStudentSearch}"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  Margin="0,10,0,0"
                  RowBackground="#FFFFFF"
                  AlternatingRowBackground="#E6F2FF"
                  GridLinesVisibility="Horizontal"
                  VerticalGridLinesBrush="#CCE5FF"
                  HorizontalGridLinesBrush="#CCE5FF"
                  BorderBrush="#007ACC">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="DA" Binding="{Binding Da}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Boutons Ajouter et Supprimer -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,10,0,0" HorizontalAlignment="Center">
            <TextBlock Text="Créer un tuteur depuis DA :" 
                       VerticalAlignment="Center" 
                       Margin="0,0,5,0"
                       Foreground="#007ACC" FontWeight="SemiBold"/>
            <TextBox Width="100" Height="25" Margin="5,0"
                     Text="{Binding DaInputCreateTutor, UpdateSourceTrigger=PropertyChanged}"
                     Background="#E6F2FF" BorderBrush="#007ACC"/>
            <Button Content="Créer" Command="{Binding CreateTutorCommand}"
                    Height="30" Width="100" Background="#90EE90" BorderBrush="Transparent"
                    FontWeight="Bold" Cursor="Hand" Margin="5"/>
            <Button Content="Supprimer" Command="{Binding DeleteStudentCommand}"
                    Height="30" Width="100" Background="#FF4C4C" Foreground="White"
                    FontWeight="Bold" Cursor="Hand" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
